        <broadleaf-pricelist.version>1.3.0-SNAPSHOT</broadleaf-pricelist.version>
        <broadleaf-custom-field.version>1.2.0-SNAPSHOT</broadleaf-custom-field.version>
        <broadleaf-advanced-cms.version>1.1.0-SNAPSHOT</broadleaf-advanced-cms.version>
        <broadleaf-advanced-offer.version>1.0.3-SNAPSHOT</broadleaf-advanced-offer.version>
        <broadleaf-subscription.version>1.1.0-SNAPSHOT</broadleaf-subscription.version>
        <broadleaf-jobs-events.version>1.0.1-SNAPSHOT</broadleaf-jobs-events.version>
        <broadleaf-enterprise.version>1.1.0-SNAPSHOT</broadleaf-enterprise.version>
